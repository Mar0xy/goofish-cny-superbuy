{
  "manifest_version": 2,
  "name": "Goofish USD Price Converter",
  "version": "1.0",
  "description": "Converts CNY prices on goofish.com to USD using the Superbuy exchange rate.",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "goofish-usd-converter@yuugi.dev",
	  "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "permissions": [
    "storage",
    "https://front.superbuy.com/*",
    "notifications",
    "alarms",
    "*://*.goofish.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.goofish.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Goofish USD Converter",
    "default_popup": "popup.html" 
  }
}
